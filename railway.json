{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd Porpoise.Api && dotnet publish -c Release -o out"
  },
  "deploy": {
    "startCommand": "cd Porpoise.Api/out && dotnet Porpoise.Api.dll --urls http://0.0.0.0:$PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
