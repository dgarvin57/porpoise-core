<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Porpoise.Core</PackageId>
    <Version>1.0.0</Version>
    <Authors>Dan Garvin, Val Smith</Authors>
    <Company>Porpoise Works</Company>
    <Description>The clean, modern, sellable core of Porpoise. Pure business logic.</Description>
    <RepositoryUrl>https://github.com/dgarvin57/porpoise-core</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Application\**\*.cs" />
    <Compile Remove="UI\**\*.cs" />
    <Compile Remove="Utilities\OpenInWord.cs" />
    <None Include="Application\**\*.cs" />
    <None Include="UI\**\*.cs" />
    <None Include="Utilities\OpenInWord.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SkiaSharp" Version="2.88.8" />
  </ItemGroup>
</Project>